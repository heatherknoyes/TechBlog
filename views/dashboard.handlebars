{{#if Posts}}
  {{#each Posts as |blog|}}
    <div class="row my-3">
      <div class="card">
        <div class="card-header">{{blog.title}}</div>
        <div class="card-body">
          <p class="card-text">
            {{blog.content}}
          </p>
          <a href="/blogs/{{blog.id}}" class="btn btn-primary">Open Blog</a>
        </div>
        <div class="card-footer text-muted">
          <a href="/edit-blog">Edit Blog</a>
          <button id="delete-post-button">Delete Post</button>
        </div>
      </div>
    </div>
  {{/each}}
{{/if}}
<div class="row">
  <a id="add-post-link" href="/create-blog">Add Post</a>
</div>