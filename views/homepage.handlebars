<!-- Loop over each object in the projects array -->
{{#each blogs as |blog| }}
  <div class="row">
    <div class="card">
      <div class="card-header">{{blog.title}}</div>
      <div class="card-body">
        <p class="card-text">
          {{blog.content}}
        </p>
        <a href="/blog.html" class="btn btn-primary">Go somewhere</a>
      </div>
      <div class="card-footer text-muted">
        Posted by {{blog.author}} on {{blog.date}}
      </div>
    </div>
  </div>
{{/each}}
